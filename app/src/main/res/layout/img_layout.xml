<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/basicVertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="106dp" android:id="@+id/imgSection">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="79dp" app:srcCompat="@mipmap/hacker" android:id="@+id/imageView"
                android:layout_margin="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="300dp"
                android:layout_height="100dp" android:id="@+id/textView" android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2" android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>