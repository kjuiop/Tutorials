<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="39dp" android:id="@+id/basicVertical">
        <TextView
                android:text="Tutorial"
                android:layout_width="match_parent"
                android:layout_height="37dp" android:id="@+id/title"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/buttonSection">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="75dp" android:id="@+id/horizon">
                <Button
                        android:text="Calculator"
                        android:layout_width="133dp"
                        android:layout_height="match_parent" android:id="@+id/btnCalculator" android:layout_weight="1"
                        android:onClick="onBtnCalculator"/>
                <Button
                        android:text="Alarm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/btnAlarm" android:layout_weight="1"
                        android:onClick="onBtnAlarm"/>
                <Button
                        android:text="Button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/button4" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>